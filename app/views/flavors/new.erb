<h1> Let'sss make a new flava </h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
   <% end %>
<% end %>

<%= form_for @flavor do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :color %>
  <%= f.text_field :color %><br>

  <%= f.label :gumballs %>
  <%= f.check_box :gumballs %><br>

  <%= f.label :organic %>
  <%= f.check_box :organic %><br>

  <%= f.label :poison %>
  <%= f.check_box :poison %><br>

  <%= f.label :truck_id %>
  <%= f.collection_select :truck_id, @trucks, :id, :name %><br>
  <%= f.submit %>
<% end %>
